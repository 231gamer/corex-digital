// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
}



model ProjectInquiry {
  id            Int           @id @default(autoincrement())
  fullName      String
  email         String
  phone         String?
  companyName   String?

  // Array of selected services from the wizard
  services      Json

  // Only used when "Others" is selected
  otherService  String?

  // Dropdown value (1-2 weeks, 2-4 weeks, etc.)
  duration      String

  // "Under $500", "$500 - $1k", etc.
  projectBudget String

  // Detailed description textarea
  details       String

  status        InquiryStatus @default(NEW)

  createdAt     DateTime      @default(now())
}

enum InquiryStatus {
  NEW
  IN_PROGRESS
  CLOSED
  ARCHIVED
}

model NewsletterSubscriber {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  source         String?
  createdAt      DateTime  @default(now())
  unsubscribedAt DateTime?
}

model TeamMember {
  id          Int      @id @default(autoincrement())
  name        String
  role        String
  bio         String
  avatarUrl   String?
  linkedInUrl String?
  xUrl        String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  role      String?
  company   String?
  message   String
  avatarUrl String?
  highlight Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  excerpt     String?
  content     String    // markdown or HTML string
  status      PostStatus @default(DRAFT)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  category    String?
  tags        String?   // comma-separated for now (keep it simple)
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Training {
  id            Int       @id @default(autoincrement())
  title         String
  slug          String    @unique
  description   String
  startDate     DateTime
  endDate       DateTime?
  location      String?
  price         String?   // or money field later
  status        TrainingStatus @default(UPCOMING)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum TrainingStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}
